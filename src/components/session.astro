---
import type { Session } from "../data/session.ts";

// Props
const { session }: { session: Session } = Astro.props;
---
<a href="#" class="flex flex-col bg-primary">
  <div class="h-1.5 w-full bg-accent"></div>
  <div class="h-1.5 w-full bg-secondary"></div>

  <div class="px-10 py-4 flex w-full justify-between items-center">
    <div class="flex flex-col gap-0">
      <h3 class="text-3xl text-white truncate font-extrabold font-uturna uppercase">{session.title}</h3>
      <p class="text-xl text-white font-normal font-prachason">{session.time} {session.location}</p>
    </div>

    <img src="/assets/chevron-right-wfd.svg" alt="Chevron Right" class="size-8" />
  </div>
</a>