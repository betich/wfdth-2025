---
import { links } from "../data/links.ts";
---

<footer class="bg-primary text-white px-4 py-12 w-full font-family-prachason">
  <div class="max-w-4xl flex flex-col gap-8 items-center w-full mx-auto">
    <div class="flex flex-col gap-4 w-full pb-4 font-semibold">
      {
        links.map((link) => (
          <div class="flex flex-col gap-y-2">
            <a href={link.href} class="hover:underline px-4">
              {link.name}
            </a>
            <hr class="border-t border-white mt-2" />
          </div>
        ))
      }
    </div>

    <div class="flex justify-center gap-4">
      <!-- instagram -->
       <a href="#">
        <img src="/assets/social/ig.svg" alt="Instagram" class="size-12" />
        </a>
  
        <!-- tiktok -->
        <a href="#">
        <img src="/assets/social/tiktok.svg" alt="TikTok" class="size-12" />
        </a>
  
        <!-- x -->
        <a href="#">
        <img src="/assets/social/x.svg" alt="X" class="size-12" />
        </a>
    </div>
  
    <div class="flex flex-col items-center gap-2 font-normal">
      <span>All Rights Reserved</span>
      <div class="flex items-center gap-4">
        <a href="#">Privacy policy</a>
        <a href="#">Terms of use</a>
      </div>
    </div>
  </div>
</footer>
