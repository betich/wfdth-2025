---
import type { Speaker as SpeakerType } from "../data/speaker";
// Props
const { speaker }: { speaker: SpeakerType } = Astro.props;
---
<div class="px-10 py-4 flex gap-8 w-full items-center">
  <img src="/assets/key-person-bg.svg" alt="" class="size-32" />

  <div class="flex flex-col w-full">
    <p class="text-5xl font-extrabold font-uturna uppercase text-primary">{speaker.name}</p>
    <p class="text-lg font-normal font-prachason text-white">{speaker.bio}</p>
  </div>
</div>