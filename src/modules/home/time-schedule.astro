---
import { sessions } from "../../data/session";
import Session from "../../components/session.astro";
---

<section class="bg-bg-cream">
  <div class="py-16 flex flex-col gap-8 items-center max-w-md mx-auto">
    <div class="flex gap-4 items-center">
      <img src="/assets/pattern-5-wfd-3-1.svg" alt="" class="size-8" />
      <h2 class="text-5xl text-primary font-extrabold font-uturna uppercase">Time Schedule</h2>
      <img src="/assets/pattern-5-wfd-3-1.svg" alt="" class="size-8" />
    </div>
    
    <div class="flex flex-col gap-4 w-full">
      {
        sessions.map((session) => (
          <Session session={session} />
        ))
      }
    </div>
  </div>
</section>