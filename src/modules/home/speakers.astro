---
import Speaker from "../../components/speaker.astro";
import { speakers } from "../../data/speaker";
---

<section class="bg-secondary w-full">
  <div class="py-16 flex flex-col gap-24 items-start max-w-md mx-auto">
    <div class="flex gap-4 items-center">
      <img src="/assets/microphone-1.svg" alt="" class="size-8" />
      <a href="#" class="flex gap-4 items-center">
        <h2 class="text-5xl text-white font-extrabold font-uturna uppercase">Speakers</h2>
        <img src="/assets/chevron-right-wfd.svg" alt="Chevron Right" class="size-8" />
      </a>
    </div>
    
    <div class="flex flex-col gap-4 w-full">
      {
        speakers.map((speaker) => (
          <Speaker speaker={speaker} />
        ))
      }
    </div>

    <div class="flex gap-4 justify-between w-full">
      <img src="/assets/dem-monument-1.svg" alt="Dem Monument" class="size-8" />
      <img src="/assets/globe-1.svg" alt="Globe" class="size-8" />
    </div>
  </div>
</section>